/* pages/user_info/user_info.wxss */
.namebox {
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #828282;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}

.name {
  margin-left:10rpx;
  font-size: 40rpx;
  color: #2f2f2f;
  float: left;
}

.nametext {
  font-size: 33rpx;
  color: #828282;
  float:left;
  padding-left: 25rpx;
  text-align:left;
}

.nameicon {
  width: 18rpx;
  height: 32rpx;
  float: right;
  padding-top: 17rpx;
  padding-right: 15rpx;
}

.userinfo-avatar {
  width: 70rpx;
  height: 70rpx;
  margin: 0rpx 0rpx 0rpx 525rpx;
  border-radius: 50%;
}

.avatarBox{
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #828282;
  margin-top: 30rpx;
  padding-bottom: 20rpx;
}

.divide {
  height: 10px;
  background-color: #fff;
}
